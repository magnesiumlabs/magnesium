{
    "git": {
        "requireBranch": [
            "main",
            "ci",
            "beta"
        ],
        "commitMessage": "chore(release): publish version ${version}"
    },
    "github": {
        "release": false,
        "releaseName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": {
                "name": "conventionalcommits"
            }
        }
    }
}
