{
    "version": "1.7.0",
    "packages": [
        "packages/*"
    ],
    "command": {
        "publish": {
            "message": "chore(release): publish",
            "ignoreChanges": [
                "**/*.md",
                "**/.github/*"
            ]
        },
        "version": {
            "conventionalCommits": true,
            "changelogPreset": {
                "name": "conventionalcommits",
                "issuePrefixes": [
                    "#"
                ],
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {
                        "type": "perf",
                        "hidden": true
                    },
                    {
                        "type": "revert",
                        "section": "Reverts"
                    },
                    {
                        "type": "docs",
                        "hidden": true
                    },
                    {
                        "type": "style",
                        "hidden": true
                    },
                    {
                        "type": "chore",
                        "hidden": true
                    },
                    {
                        "type": "refactor",
                        "section": "Code Refactoring"
                    },
                    {
                        "type": "test",
                        "section": "Tests",
                        "hidden": true
                    },
                    {
                        "type": "build",
                        "hidden": true
                    },
                    {
                        "type": "ci",
                        "hidden": true
                    }
                ],
                "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
                "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
                "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
                "userUrlFormat": "{{host}}/{{user}}"
            }
        }
    }
}
